
# ==========================================================
# Vidhi - Environment Configuration (Example)
# Copy this file to .env and fill real values.
# DO NOT commit .env
# ==========================================================

# ----------------------------
# Application Settings
# ----------------------------
APP_NAME=Vidhi
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ----------------------------
# API Server (FastAPI)
# ----------------------------
API_HOST=0.0.0.0
API_PORT=8000

# ----------------------------
# Streamlit UI
# ----------------------------
UI_HOST=0.0.0.0
UI_PORT=8501

# ----------------------------
# OpenAI / LLM Provider
# ----------------------------
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Optional (if you support Azure OpenAI)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# ----------------------------
# Vector Store Configuration
# ----------------------------
VECTOR_STORE_TYPE=chroma   # chroma | faiss

CHROMA_DB_PATH=./vectorstore/chroma_db
FAISS_INDEX_PATH=./vectorstore/faiss_index

# ----------------------------
# Data Paths (Local Storage)
# ----------------------------
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CHUNKS_PATH=./data/chunks
OUTPUTS_PATH=./outputs

# ----------------------------
# Document Uploads
# ----------------------------
USER_UPLOAD_PATH=./data/raw/user_uploads
MAX_UPLOAD_SIZE_MB=25

# ----------------------------
# Ingestion Settings
# ----------------------------
ENABLE_OCR=true
OCR_LANGUAGE=eng+hin

CHUNK_SIZE=800
CHUNK_OVERLAP=150

# ----------------------------
# Retrieval / RAG Settings
# ----------------------------
TOP_K_RESULTS=5
RERANK_RESULTS=true
MAX_CONTEXT_TOKENS=6000

# ----------------------------
# Citation Validation
# ----------------------------
ENABLE_CITATION_VALIDATION=true
CITATION_CONFIDENCE_THRESHOLD=0.70

# ----------------------------
# Rate Limiting / Safety
# ----------------------------
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
ENABLE_SAFETY_GUARDRAILS=true

# ----------------------------
# Storage Options
# ----------------------------
STORAGE_BACKEND=local   # local | s3

# If using AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET_NAME=vidhi-storage-example

# ----------------------------
# LangSmith / Tracing (Optional)
# ----------------------------
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=vidhi-capstone
ENABLE_TRACING=false

# ----------------------------
# Monitoring / Logging Outputs
# ----------------------------
LOG_DIR=./logs
AGENT_TRACE_LOG=./logs/agent_traces.log
RETRIEVAL_LOG=./logs/retrieval.log
APP_LOG=./logs/app.log

# ----------------------------
# Security / Secrets
# ----------------------------
SECRET_KEY=replace_this_with_random_string
JWT_SECRET_KEY=replace_this_with_another_random_string

# ----------------------------
# Deployment Mode
# ----------------------------
DEPLOYMENT_MODE=local  # local | aws | streamlit_cloud | render | replit
